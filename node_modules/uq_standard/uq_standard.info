name        = UQ Standard
description = Base theme for UQ branded websites. Includes the global header
              and footer and default element styles.
screenshot  = screenshot.png
core        = 7.x

; Documentation
; Writing theme info files https://www.drupal.org/node/171205
; Panel layouts for theme https://drupal.org/node/495654

stylesheets[all][]   = css/styles.css
stylesheets[print][] = css/print.css

scripts[] = js/uq_standard_accordion.js
scripts[] = js/uq_standard_main-menu.js
scripts[] = bower_components/foundation/js/foundation.min.js
scripts[] = js/uq_standard.js

regions[header]      = Header
regions[navigation]  = Navigation
regions[top]         = Page header
regions[help]        = Help
regions[content]     = Content
regions[bottom]      = Page footer
regions[footer]      = Footer

; The page_top and page_bottom regions are hidden, which means they will not
; show up on the blocks administration page. However they are required in order for
; the html.tpl.php to work properly, so do not delete them.

regions[page_top]    = Page top
regions[page_bottom] = Page bottom

settings[uq_standard_hide_panel_page_title]   = 1
settings[uq_standard_hide_panel_primary_tabs] = 1
settings[uq_standard_hide_site_search]        = 0

features[] = name
features[] = favicon
features[] = main_menu

plugins[panels][layouts] = layouts
